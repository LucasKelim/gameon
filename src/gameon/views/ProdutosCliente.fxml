<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gameon.controllers.ProdutosClienteController">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="15.0">
         <children>
            <Button mnemonicParsing="false" onAction="#voltarMenu" text="â† Voltar" />
            <Label text="Produtos" style="-fx-font-size: 20; -fx-font-weight: bold;" />
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </HBox>

      <HBox alignment="CENTER_LEFT" spacing="15.0">
         <children>
            <TextField fx:id="txtBusca" prefWidth="200.0" promptText="Buscar produto..." />
            <ComboBox fx:id="cmbCategoria" prefWidth="150.0" promptText="Categoria" />
            <Button mnemonicParsing="false" onAction="#filtrar" text="Filtrar" />
            <Button mnemonicParsing="false" onAction="#limparFiltros" text="Limpar" />
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" />
         </padding>
      </HBox>

      <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
         <content>
            <FlowPane fx:id="flowProdutos" hgap="20.0" prefWidth="600.0" vgap="20.0">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
               </padding>
            </FlowPane>
         </content>
      </ScrollPane>
   </children>
</VBox>

