<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15" xmlns="http://javafx.com/javafx/25" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="gameon.controllers.PagamentoPixController">
    
    <HBox alignment="CENTER_LEFT" spacing="15">
        <children>
            <Button text="← Voltar" onAction="#voltarParaEndereco" />
            <Label text="Pagamento com PIX" style="-fx-font-size: 20; -fx-font-weight: bold;" />
        </children>
        <padding>
            <Insets bottom="10" left="20" right="20" top="10" />
        </padding>
    </HBox>
    
    <Label fx:id="lblMensagem" style="-fx-padding: 0 20; -fx-font-size: 14;" />
    
    <VBox alignment="CENTER" spacing="10">
        <Label text="Valor a Pagar:" style="-fx-font-size: 16;" />
        <Label fx:id="lblValor" text="R$ 0,00" style="-fx-font-size: 24; -fx-font-weight: bold;" />
    </VBox>
    
    <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
        <Label text="Use a chave PIX abaixo:" style="-fx-font-size: 14;" />
        <Label fx:id="lblChavePix" 
               style="-fx-font-family: monospace; -fx-background-color: #f5f5f5; -fx-padding: 10; -fx-border-radius: 5; -fx-border-color: #ccc;" />
        <Label text="Ou escaneie o QR Code:" style="-fx-font-size: 14;" />
        <ImageView fx:id="imgQrCode" fitWidth="200" fitHeight="200" 
                   style="-fx-border-color: #ccc; -fx-border-radius: 5;" />
    </VBox>
    
    <VBox spacing="10" style="-fx-padding: 0 20;">
        <Label text="Detalhes do Pedido:" style="-fx-font-size: 16; -fx-font-weight: bold;" />
        <TextArea fx:id="txtDetalhes" editable="false" prefRowCount="8" 
                  style="-fx-font-size: 12;" />
    </VBox>
    
    <HBox alignment="CENTER" spacing="15">
        <children>
            <Button fx:id="btnConfirmarPagamento" text="Já Paguei (Simular)" 
                    onAction="#confirmarPagamento" 
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14; -fx-pref-width: 150;" />
        </children>
        <padding>
            <Insets bottom="20" left="20" right="20" />
        </padding>
    </HBox>
    
</VBox>