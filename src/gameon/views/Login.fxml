<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gameon.controllers.LoginController">
   <children>
      <Label text="Game On - Login">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      
      <TextField fx:id="txtEmail" promptText="Digite seu email" maxWidth="250.0" />
      
      <PasswordField fx:id="txtSenha" promptText="Digite sua senha" maxWidth="250.0" />
      
      <Button mnemonicParsing="false" onAction="#fazerLogin" text="Entrar" />
      
      <Label fx:id="lblMensagem" textFill="#e40e0e" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>