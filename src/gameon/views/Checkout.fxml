<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gameon.controllers.CheckoutController">
   <children>
      <Label text="Finalizar Compra" style="-fx-font-size: 20; -fx-font-weight: bold;" />

      <Label text="Endereço de Entrega" style="-fx-font-size: 14; -fx-font-weight: bold;" />
      <TextField fx:id="txtLogradouro" promptText="Logradouro" />
      <TextField fx:id="txtNumero" promptText="Número" />
      <TextField fx:id="txtBairro" promptText="Bairro" />
      <TextField fx:id="txtCidade" promptText="Cidade" />
      <TextField fx:id="txtCep" promptText="CEP" />
      <ComboBox fx:id="cmbEstado" promptText="Estado" prefWidth="200.0" />

      <Label text="Método de Pagamento" style="-fx-font-size: 14; -fx-font-weight: bold;" />
      <ComboBox fx:id="cmbMetodoPagamento" promptText="Selecione o método" prefWidth="300.0" />

      <Label fx:id="lblResumo" text="Total a pagar: R$ 0,00" style="-fx-font-size: 14; -fx-font-weight: bold;" />

      <Button mnemonicParsing="false" onAction="#confirmarCompra" prefWidth="150.0" text="Confirmar Compra" style="-fx-font-size: 14;" />
      <Button mnemonicParsing="false" onAction="#voltarCarrinho" text="Voltar" />

      <Label fx:id="lblMensagem" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
